option_settings:
  aws:elasticbeanstalk:application:environment:
    # RDS connection variables - automatically populated by Elastic Beanstalk when RDS is added
    # These map to Laravel's database configuration
    DB_CONNECTION: mysql
    DB_HOST: '`{"Fn::GetAtt": ["AWSEBRDSDatabase", "Endpoint.Address"]}`'
    DB_PORT: '`{"Fn::GetAtt": ["AWSEBRDSDatabase", "Endpoint.Port"]}`'
    DB_DATABASE: '`{"Ref": "AWSEBRDSDatabase"}`'
    DB_USERNAME: '`{"Ref": "AWSEBRDSDBUsername"}`'
    DB_PASSWORD: '`{"Ref": "AWSEBRDSDBPassword"}`'
    # Legacy RDS variables (for compatibility)
    RDS_HOSTNAME: '`{"Fn::GetAtt": ["AWSEBRDSDatabase", "Endpoint.Address"]}`'
    RDS_PORT: '`{"Fn::GetAtt": ["AWSEBRDSDatabase", "Endpoint.Port"]}`'
    RDS_DB_NAME: '`{"Ref": "AWSEBRDSDatabase"}`'
    RDS_USERNAME: '`{"Ref": "AWSEBRDSDBUsername"}`'
    RDS_PASSWORD: '`{"Ref": "AWSEBRDSDBPassword"}`'
