APP_NAME=Periscope
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
# Production: use LOG_LEVEL=error or warning
LOG_LEVEL=debug

# Database Configuration (MySQL - matches production/staging)
# Production uses RDS (DB_HOST, DB_PORT, etc. are set via RDS environment variables)
# Local/Staging: Set these manually
DB_CONNECTION=mysql
DB_DATABASE=periscope
DB_USERNAME=root
DB_PASSWORD=

# For RDS (production), these are automatically set from RDS environment variables:
# RDS_HOSTNAME, RDS_PORT, RDS_DB_NAME, RDS_USERNAME, RDS_PASSWORD

SESSION_DRIVER=database
SESSION_LIFETIME=120
# Production: SESSION_ENCRYPT=true, SESSION_SECURE_COOKIE=true (or rely on APP_ENV defaults)
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
# Queue: Use 'sync' for local, 'sqs' for production/staging
QUEUE_CONNECTION=sync

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# Local: Use 'log' to log emails to storage/logs/laravel.log
# Production/Staging: Use 'ses' for AWS SES
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS=do-not-reply@uniqlabs.co
MAIL_FROM_NAME="Periscope"

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# SNS Configuration (for SMS)
AWS_SNS_REGION=us-east-1

# SQS Queue Configuration (for production/staging)
SQS_PREFIX=https://sqs.us-east-1.amazonaws.com/005483488708
SQS_QUEUE=periscope-auth-queue

# Frontend URL
FRONTEND_URL=http://localhost:8000

VITE_APP_NAME="${APP_NAME}"
